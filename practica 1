import java.util.Scanner;
public class correo1 {
	static Scanner teclado = new Scanner( System.in );
	public static void main(String[] args) {
		//VARIABLES
		String para;
		String Asunto;
		String Cuerpo;
		String eleccion;
		//PETICION DE DATOS AL USUARIO PARA ENVIAR UN CORREO
	System.out.print("Para: ");
	para = teclado.nextLine();
	System.out.print("Asunto: ");
	Asunto = teclado.nextLine();
	System.out.print("Cuerpo: ");
	Cuerpo = teclado.nextLine();
		//PREGUNTAMOS SI ESTA SEGURO DE ENVIAR EL CORREO
	System.out.println("Seguro que quieres enviar el correo electronico? s/n");
	eleccion = teclado.nextLine();
	
	if(eleccion=="s")
		{
		System.out.println("Para:"+para);
		System.out.println("Asunto:"+Asunto);
		System.out.println("Cuerpo:"+Cuerpo);
	}
	else
	{
	System.out.println("Envio Cancelado");
	}
	
	
	
	}

}


