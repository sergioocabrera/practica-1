import java.util.Scanner;
public class calculadora {

	public static void main(String[] args) {
		Scanner teclado = new Scanner( System.in );
		int a = 0;
		int b = 0;
		
		int eleccion;
		System.out.print("=================\r\n"
				+ "== CALCULADORA ==\r\n"
				+ "=================\r\n"
				+ "");
		 System.out.println("¿Que desea hacer?: \r\n"
			   		+ "");	//ENSEÑAMOS EL MENU CON LA OPCIONES
			   System.out.println("1. Suma"); 
			   System.out.println("2. Resta");
			   System.out.println("3. Multiplicacion");
			   System.out.println("4. Division");
			   System.out.println("5. Modulo");
			   System.out.println("5. Potencia");
			   System.out.println("5. Raiz Cuadrada");
			   System.out.println("5. Generar un número aleatorio (entre 1 a 1000)");
			   System.out.println("5. Calcular longitud de una circunferencia (L = 2*PI*r)\r\n"
			   		+ "");
			   eleccion = teclado.nextInt();
			   switch(eleccion){
			   case 1:
				   System.out.println("---------------------------------Calculadora Suma---------------------------------");
				   System.out.print("Ingresa el primer dato: ");
				   a =teclado.nextInt();
				   System.out.print("Ingresa el segundo dato: ");
				   b =teclado.nextInt();
				   System.out.println("La suma de "+a+" + "+b+" = "+ (a+b));
			       break;
			   case 2:
				   System.out.println("---------------------------------Calculadora Resta---------------------------------");
				   System.out.print("Ingresa el primer dato: ");
				   a =teclado.nextInt();
				   System.out.print("Ingresa el segundo dato: ");
				   b =teclado.nextInt();
				   System.out.println("La resta de "+a+" - "+b+" = "+ (a-b));
				   break;
			   case 3:
				   System.out.println("---------------------------------Calculadora Multipliacion---------------------------------");
				   System.out.print("Ingresa el primer dato: ");
				   a =teclado.nextInt();
				   System.out.print("Ingresa el segundo dato: ");
				   b =teclado.nextInt();
				   System.out.println("La multiplicacion de "+a+" x "+b+" = "+ (a*b));
				   break;
			   case 4:
				   System.out.println("---------------------------------Calculadora Division---------------------------------");
				   System.out.print("Ingresa el primer dato: ");
				   a =teclado.nextInt();
				   System.out.print("Ingresa el segundo dato: ");
				   b =teclado.nextInt();
				   System.out.println("La division de "+a+" / "+b+" = "+ (a/b));
				   break;
			   case 5:
				   
				   
				   break;
			   
			   }
				    }

			}
