                                                        --------------------*ACABADO*--------------------
                                               https://es.stackoverflow.com/questions/208922/como-mostrar-hora-actual-en-java
                                                        -------------------------------------------------

//impotamos la clase LocalDate
import java.time.LocalDateTime;

public class reloj {

	public static void main(String[] args) {
		LocalDateTime locaDate = LocalDateTime.now(); //usamos la clase LocalDate
		int hours  = locaDate.getHour();	 //variable para obtener las horas
		int minutes = locaDate.getMinute(); 	//variable para obtener los minutos
		System.out.println("Hora actual es : " + hours  + ":"+ minutes); //Para representar por pantalla
		
	}

}
