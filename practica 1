public class sergio {

	public static void main(String[] args) {
Scanner teclado = new Scanner( System.in );

		{
			int eleccion;	//variable de la eleccion
      
   System.out.println("==================\r\n"
   		+ "== OFICINA v1.0 ==\r\n"
   		+ "==================\r\n"
   		+ "");
      
   System.out.println("¿Que desea hacer?: \r\n"
   		+ "");	//ENSEÑAMOS EL MENU CON LA OPCIONES
   System.out.println("1. Reloj"); 
   System.out.println("2. Correo Electronico");
   System.out.println("3. Calculadora");
   System.out.println("4. Salir del programa");
   System.out.print("Deseo la opcion: ");
    eleccion = teclado.nextInt();	//PETICION DE LA ELECCION
    
    System.out.println("------------------/Resultado de su eleccion/------------------");	
    		
   switch(eleccion){
   case 1:

       break;
   case 2:
       
   break;
   case 3:
       
     break;
   case 4:
	   
   break;
   
   }
	    }

}}

